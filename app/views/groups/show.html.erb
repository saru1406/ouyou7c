<div class='container px-5 px-sm-0'>

  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Groups Detaill</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>

    </tr>
    <tbody>
      <td><%= image_tag @group.get_image, size: '50x50' %></td>
      <td><%= @group.name %></td>
      <td><%= @group.introduction %></td>
      <td><% @group.users.each do |member| %>
          <%= member.name %><br>
          <% end %></td>
      <% if @group.owner_id == current_user.id %>
      <th><%= link_to 'Edit', edit_group_path(@group.id), class: "btn btn-sm btn-success" %></th>
      <% end %>
      <% if @group.owner_id == current_user.id %>
      <% elsif @group.users.include?(current_user) %>
      <td><%= link_to 'Leave this group' , group_path(@group), method: :delete, class: "btn btn-sm btn-danger"  %></td>
      <% else %>
      <td><%= link_to 'Join this group' , group_join_path(@group),class: "btn btn-sm btn-success" %></td>
      <% end %>


    </tbody>
  </thead>
  <tbody>

  </tbody>
</table>
    </div>
  </div>
</div>