<div class='container '>
  <div class='row' >
　　<div class='mx-auto'>
　　  <%= render 'layouts/errors', obj: @group %>
      <h1>Creat Group</h1>

      <%= form_with model: @group,local:true do |f| %>
      <div class="form-group">
      <%= f.label :グループ名 %>
      <%= f.text_field :name, class: 'form-control group_name' %>
      </div>
      <div class="form-group">
      <%= f.label :紹介文 %>
      <%= f.text_area :introduction, class: 'form-control group_introduction'%>
      </div>
      <div class="form-group">
      <%= f.label :グループ画像 %><br>
      <%= f.file_field :image,  class: "form-control-file" %>
      </div>
      <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
      <% end %>
      </div>
    </div>
  </div>
</div>